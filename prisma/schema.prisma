generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id              String  @id @default(uuid())
  userId          String? @unique
  username        String  @unique
  email           String  @unique
  passwordHash    String
  isEmailVerified Boolean @default(false)

  role   AccountRole   @default(USER)
  status AccountStatus @default(PENDING)

  verifiedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  refreshTokens    RefreshToken[]
  verificationCode VerificationCode[]
  logs             AccountLog[]

  @@index([createdAt, id])
  @@index([status])
}

model VerificationCode {
  id        String      @id @default(uuid())
  purpose   CodePurpose
  accountId String
  codeHash  String
  createdAt DateTime    @default(now())
  expiresAt DateTime
  used      Boolean     @default(false)

  account           Account            @relation(fields: [accountId], references: [id])
  verificationToken VerificationToken?

  @@index([expiresAt])
  @@index([accountId, purpose, used])
}

model VerificationToken {
  id        String   @id @default(uuid())
  codeId    String   @unique
  jti       String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
  revoked   Boolean  @default(false)

  verificationCode VerificationCode @relation(fields: [codeId], references: [id])

  @@index([expiresAt])
  @@index([revoked])
}

model RefreshToken {
  id        String   @id @default(uuid())
  accountId String
  jti       String
  createdAt DateTime @default(now())
  expiresAt DateTime
  revoked   Boolean  @default(false)

  account Account @relation(fields: [accountId], references: [id])

  @@index([jti])
  @@index([expiresAt])
  @@index([accountId, revoked])
}

model AccountLog {
  id          String    @id @default(uuid())
  accountId   String
  action      LogAction
  performedBy String? // ID of the admin or system process that performed the action
  details     String? // Optional details about the action
  createdAt   DateTime  @default(now())

  account Account @relation(fields: [accountId], references: [id])

  @@index([accountId])
  @@index([action])
  @@index([createdAt])
}

model UserSummary {
  id                String   @id @default(uuid())
  summaryDate       DateTime // Explicit date for the summary
  totalUsers        Int
  activeUsers       Int
  suspendedUsers    Int
  pendingUsers      Int
  newUsers          Int
  newActiveUsers    Int      @default(0) // New users with ACTIVE status
  newSuspendedUsers Int      @default(0) // New users with SUSPENDED status
  newPendingUsers   Int      @default(0) // New users with PENDING status
  newBannedUsers    Int      @default(0) // New users with BANNED status
  createdAt         DateTime @default(now()) // Tracks when the record was written

  @@index([summaryDate]) // Index for querying by summary date
}

enum AccountRole {
  USER
  SYSTEM_ADMIN
}

enum AccountStatus {
  ACTIVE
  PENDING
  SUSPENDED
  BANNED
}

enum CodePurpose {
  VERIFY_EMAIL
  RESET_PASSWORD
}

enum LogAction {
  ACCOUNT_CREATED
  ACCOUNT_UPDATED
  ACCOUNT_BANNED
  ACCOUNT_SUSPENDED
  ACCOUNT_ACTIVATED
  PASSWORD_CHANGED
  EMAIL_VERIFIED
}
